@using DTO.Login
@model UsuarioTO

@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal"})){
    <h1>User Login</h1>
    <div class="container">
        @Html.LabelFor(e => e.Username)
        @Html.TextBoxFor(e => e.Username, new { @class = "form-control" })
    </div>

    <div class="container">
        @Html.LabelFor(e => e.Password)
        @Html.PasswordFor(e => e.Password, new { @class = "form-control"})
    </div>

    <input class="btn btn-success m-2" type="submit" value="Login" />
}