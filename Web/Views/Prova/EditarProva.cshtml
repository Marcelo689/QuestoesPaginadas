@using DTO
@model ProvaTO

<style>
    .text-box{
        width:500px;
        border:groove;
        font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    label{
        font-weight:bolder;
        margin:10px;
    }

    textarea{
       padding:4px;
       width:800px;
    }

    li{
        margin:20px;
        margin-left:0px;
    }
</style>

<div class="container m-2">

    @using (Html.BeginForm(actionName: "SaveAnswers", controllerName: "Prova", FormMethod.Post))
    {
        @Html.HiddenFor(e => e.Id)

        <div class="d-flex flex-column">
            @Html.LabelFor(e => e.Name, new { @class = "group-control" })
            @Html.EditorFor(e => e.Name, new { @class = "group-control" })
        </div>
    
        @Html.Partial("RenderEditableQuestoes", Model.Questoes.ToList())
    }
</div>