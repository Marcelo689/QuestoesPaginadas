@using DTO;
@model ProvaTO

<style>
    .container-opcoes {
        margin:30px;
        width:fit-content;
    }
</style>
<form action="Prova/Resultados" method="post">

    <div id="container-questoes" class="container">
        @foreach(QuestaoTO questao in Model.Questoes){
            <div class="container-questao">
                <li>@questao.Name</li>
                @Html.Partial("_QuestaoOpcoes", questao)
            </div>
        }
        <div>
            <div class="d-flex justify-content-center ">
                <label class="m-2 font-monospace card-title" >Pagina</label>
                <select class="m-2 form-select-sm" id="numeroQuestaoPorPagina">
                    <option value="0">1</option>
                    <option value="1">2</option>
                    <option value="2">4</option>
                    <option value="3">6</option>
                    <option value="4">8</option>
                    <option value="5">10</option>
                </select>
                <input class="m-2" style="width:60px" type="number" disabled id="pagina-atual" />
            </div>
            <div class="container d-flex justify-content-center">
                <button class="btn btn-info m-1" id="btn-prev"> Anterior </button> 
                <button class="btn btn-info m-1" id="btn-next"> Próxima </button>
            </div>
        </div>
        <div class="container btn-group-lg">
            <button class="btn btn-success" type="submit">
                Enviar Respostas
            </button>
        </div>
    </div>
</form>
<script src="Scripts/Prova/IndexController.js"></script>